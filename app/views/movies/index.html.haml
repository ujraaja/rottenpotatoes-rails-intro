-#  This file is app/views/movies/index.html.haml
%h1 All Movies

= form_tag movies_path, :method => :get, :id => 'ratings_form'  do
  Include:
  - @all_ratings.each do |ratin|
    = ratin.rating
    = check_box_tag "ratings[#{ratin.rating}]", 1, (session[:filtered_ratings] == nil or session[:filtered_ratings].include? ratin.rating), :id => "ratings_#{ratin.rating}"
  = submit_tag 'Refresh', :id => 'ratings_submit'

%table#movies
  %thead
    %tr
      %th{:class => @movie_highlight}= link_to "Movie Title", movies_path(:title_sort => 'on')
      %th Rating
      %th{:class => @date_highlight}= link_to "Release Date", movies_path(:date_sort => 'on')
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
